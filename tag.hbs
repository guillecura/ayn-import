{{!< default}}
{{!-- The tag above means - insert everything in this file into the {body} of the default.hbs template --}}
<header class="pages-nav">
  {{#if @blog.logo}}
    <a class="logo" href="{{@blog.url}}" style="background-image: url('{{@blog.logo}}');">
      {{@blog.title}}
    </a>
  {{else}}
    <a class="no-logo" href="{{@blog.url}}">
      {{@blog.title}}
    </a>
  {{/if}}
</header>

<div class="site-wrapper">
  {{!-- If we have a tag cover, display that - else blog cover - else nothing --}}
  <header class="main-header tag-head {{#if tag.image}}" style="background-image: url({{tag.image}}){{else}}{{#if @blog.cover}}" style="background-image: url({{@blog.cover}}){{else}}no-cover{{/if}}{{/if}}"></header>

  <section class="tag-description">
    {{#tag}}
      {{#if description}}
        <div class="hi-box">
          <h2>{{name}}</h2>
          <p class="page-description">{{description}}</p>
        </div>
      {{/if}}
    {{/tag}}

    <article class="brands">
      {{#get "posts" order="published_at asc" include="tags" as |brand|}}
        {{#foreach brand}}
          {{#has tag="brand"}}
            <figure class="brand-image" style="background-image: url('{{image}}');">
              <img src="{{image}}" alt="{{title}}" />
            </figure>
          {{/has}}
        {{/foreach}}
      {{/get}}
    </article>
  </section>

  {{!-- The main content area on the homepage --}}
  <main class="content" role="main">

    {{#get "posts" order="published_at asc" include="tags" as |product|}}
      {{!-- Tobacco --}}
      <article class="filters" name="tabaco" id="tabaco">
        <h2>tabaco</h2>

        {{#foreach product}}
          {{#has tag="habanos, cigarros, accesorios"}}
            {{#foreach tags}}
              <a href="#{{name}}" title="{{name}}" class="tag-{{id}}">{{name}}</a>
            {{/foreach}}
          {{/has}}
        {{/foreach}}
      </article>

      {{#foreach product}}
        {{#has tag="tabaco"}}
          <figure class="gallery-image {{post_class}}" data-name="{{title}}" style="background-image: url('{{image}}');">
            <h5>{{title}}</h5>
            {{content}}
          </figure>
        {{/has}}
      {{/foreach}}
      {{!-- End Tobacco --}}

      {{!-- Molasses --}}
      <article class="filters" name="habanos" id="habanos">
        <h2>habanos</h2>

        {{#foreach product}}
          {{#has tag="tabaco, cigarros, accesorios"}}
            {{#foreach tags}}
              <a href="#{{name}}" title="{{name}}" class="tag-{{id}}">{{name}}</a>
            {{/foreach}}
          {{/has}}
        {{/foreach}}
      </article>

      {{#foreach product}}
        {{#has tag="habanos"}}
          <figure class="gallery-image {{post_class}}" data-name="{{title}}" style="background-image: url('{{image}}');">
            <h5>{{title}}</h5>
            {{content}}
          </figure>
        {{/has}}
      {{/foreach}}
      {{!-- End Habanos --}}

      {{!-- Cigar --}}
      <article class="filters" name="cigarros" id="cigarros">
        <h2>cigarros</h2>

        {{#foreach product}}
          {{#has tag="tabaco, habanos, accesorios"}}
            {{#foreach tags}}
              <a href="#{{name}}" title="{{name}}" class="tag-{{id}}">{{name}}</a>
            {{/foreach}}
          {{/has}}
        {{/foreach}}
      </article>

      {{#foreach product}}
        {{#has tag="cigarros"}}
          <figure class="gallery-image {{post_class}}" data-name="{{title}}" style="background-image: url('{{image}}');">
            <h5>{{title}}</h5>
            {{content}}
          </figure>
        {{/has}}
      {{/foreach}}
      {{!-- End Cigar --}}

      {{!-- Accessories --}}
      <article class="filters" name="accesorios" id="accesorios">
        <h2>accesorios</h2>

        {{#foreach product}}
          {{#has tag="tabaco, habanos, accesorios"}}
            {{#foreach tags}}
              <a href="#{{name}}" title="{{name}}" class="tag-{{id}}">{{name}}</a>
            {{/foreach}}
          {{/has}}
        {{/foreach}}
      </article>

      {{#foreach product}}
        {{#has tag="accesorios"}}
          <figure class="gallery-image {{post_class}}" data-name="{{title}}" style="background-image: url('{{image}}');">
            <h5>{{title}}</h5>
            {{content}}
          </figure>
        {{/has}}
      {{/foreach}}
      {{!-- End Accessories --}}
    {{/get}}
      {{!-- The tag below includes the post loop - partials/loop.hbs --}}

  </main>
</div>
